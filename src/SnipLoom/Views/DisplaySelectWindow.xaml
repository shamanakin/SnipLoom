<Window x:Class="SnipLoom.Views.DisplaySelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Display"
        Height="300"
        Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#1e1e1e"
        ResizeMode="NoResize">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Select a display to record" 
                   FontSize="16" 
                   FontWeight="SemiBold" 
                   Foreground="White" 
                   Margin="0,0,0,12"/>
        
        <!-- Display List -->
        <ListBox x:Name="DisplayList"
                 Grid.Row="1"
                 Background="#252525"
                 BorderThickness="0"
                 Foreground="White"
                 SelectionChanged="DisplayList_SelectionChanged">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="12,10"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border x:Name="Bd" 
                                        Background="#252525" 
                                        Padding="{TemplateBinding Padding}"
                                        Margin="2">
                                    <ContentPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#0078d4"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#3d3d3d"/>
                                    </Trigger>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsSelected" Value="True"/>
                                            <Condition Property="IsMouseOver" Value="True"/>
                                        </MultiTrigger.Conditions>
                                        <Setter TargetName="Bd" Property="Background" Value="#0078d4"/>
                                    </MultiTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding FriendlyName}" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock Text="{Binding Details}" FontSize="11" Foreground="#888"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,12,0,0">
            <Button x:Name="BtnCancel" 
                    Content="Cancel" 
                    Click="Cancel_Click"
                    Background="#444"
                    Foreground="White"
                    Padding="16,8"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,8,0"/>
            <Button x:Name="BtnSelect" 
                    Content="Select" 
                    Click="Select_Click"
                    IsEnabled="False"
                    Background="#0078d4"
                    Foreground="White"
                    Padding="16,8"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
